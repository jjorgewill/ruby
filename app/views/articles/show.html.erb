<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @article.user %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<h3>Comments:</h3>
<div>
  <%= render "comments/form" %>
</div>
<div>
  <% @article.comments.each do |comment| %>
      <ul id="comments-list">
        <li><%= comment.body %> - <%= comment.user.email %></li>
      </ul>
  <p> </p>
  <% end %>
</div>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
